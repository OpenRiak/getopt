%% -*- mode: erlang; erlang-indent-level: 4; indent-tabs-mode: nil -*-

{erl_opts, [
    debug_info,
    warn_bif_clash,
    warn_deprecated_function,
    warn_deprecated_type,
    warn_export_all,
    warn_export_vars,
    warn_missing_spec,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_untyped_record,
    warn_unused_function,
    warn_unused_import,
    warn_unused_record,
    warn_unused_vars,
    warnings_as_errors,
    {platform_define, "^2", unicode_str}
]}.

{cover_enabled, true}.

{dialyzer, [
    {warnings, [
        error_handling,
        race_conditions,
        unknown,
        unmatched_returns
    ]}
]}.

{xref_checks, [
    deprecated_function_calls,
    deprecated_functions,
    locals_not_used,
    undefined_function_calls,
    undefined_functions
]}.

{profiles, [
    {docs, [
        {edoc_opts, [
            {preprocess, true},
            {macros, [{'EDOC', true}]}
        ]}
    ]},
    {example, [
        {erl_opts, [
            nowarn_missing_spec
        ]},
        {extra_src_dirs, [
            "examples"
        ]}
    ]},
    {test, [
        {erl_opts, [
            nowarn_missing_spec
        ]}
    ]},
    {validate, [
        {erl_opts, [
            strong_validation,
            no_auto_import,
            warn_bif_clash,
            warn_deprecated_function,
            warn_deprecated_type,
            warn_export_all,
            warn_export_vars,
            warn_missing_spec,
            warn_missing_spec_all,
            warn_obsolete_guard,
            warn_shadow_vars,
            warn_untyped_record,
            warn_unused_function,
            warn_unused_import,
            warn_unused_record,
            warn_unused_vars,
            {d, 'VALIDATE'}
        ]}
    ]}
]}.

{alias, [
    {check, [xref, dialyzer]},
    {test,  [eunit, cover]}
]}.
